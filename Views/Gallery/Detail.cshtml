@model ShareImageProject.Models.DetailGalModel

<div class="container body-content">
    <div class="row image-detail-container">
        <div class="image-detail>
            <img src="@Model.Url" alt="@Model.Title" />
        </div>
    </div>
    <div class="row image-detail-meta-data">
        <span>Title: @Model.Title</span>
        <span>Uploaded: @Model.Created</span>
    </div>
    <div class="row controls">
        <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">
            Back to the Gallery
        </a>
    </div>
</div>